    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/node", //node vm地址
            "args": [
                "/home/devops/Desktop/Basic-Recording/Agora-Restful-Recording-Nodejs/record/demo.js"
            ], //宿主js地址
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true,
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
        },
        {
            "name": "node demo",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/record/sdkdemo.js"
        }
    ]
}